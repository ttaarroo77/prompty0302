<div class="row">
  <div class="col-md-8">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h2" style="padding-left: 0;">プロンプト一覧</h1>
      <div class="d-flex align-items-center gap-3">
        <!-- 検索フォーム -->
        <div class="position-relative" style="min-width: 250px;">
          <%= form_with(url: prompts_path, method: :get, data: { controller: "search", turbo_frame: "search-results" }) do |f| %>
            <%= f.hidden_field :sort, value: params[:sort] if params[:sort].present? %>
            <%= f.hidden_field :tag, value: params[:tag] if params[:tag].present? %>
            <div class="input-group">
              <%= f.search_field :search, 
                  class: "form-control",
                  placeholder: "タイトル、説明、タグで検索...",
                  value: params[:search],
                  data: { 
                    action: "input->search#search",
                    search_target: "input"
                  } %>
              <% if params[:search].present? %>
                <%= link_to prompts_path(sort: params[:sort], tag: params[:tag]), 
                    class: "btn btn-outline-secondary",
                    title: "検索をクリア" do %>
                  <i class="bi bi-x"></i>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>

        <!-- ソートオプション -->
        <div class="dropdown">
          <button class="btn btn-outline-dark dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            <%= case params[:sort]
              when 'title_asc' then 'タイトル（昇順）'
              when 'title_desc' then 'タイトル（降順）'
              when 'created_asc' then '作成日時（古い順）'
              when 'created_desc' then '作成日時（新しい順）'
              else '作成日時（新しい順）'
              end %>
          </button>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="sortDropdown">
            <li><%= link_to 'タイトル（昇順）', prompts_path(sort: 'title_asc', tag: params[:tag]), class: "dropdown-item #{'active' if params[:sort] == 'title_asc'}" %></li>
            <li><%= link_to 'タイトル（降順）', prompts_path(sort: 'title_desc', tag: params[:tag]), class: "dropdown-item #{'active' if params[:sort] == 'title_desc'}" %></li>
            <li><hr class="dropdown-divider"></li>
            <li><%= link_to '作成日時（新しい順）', prompts_path(sort: 'created_desc', tag: params[:tag]), class: "dropdown-item #{'active' if params[:sort] == 'created_desc' || params[:sort].nil?}" %></li>
            <li><%= link_to '作成日時（古い順）', prompts_path(sort: 'created_asc', tag: params[:tag]), class: "dropdown-item #{'active' if params[:sort] == 'created_asc'}" %></li>
          </ul>
        </div>

        <% if params[:tag].present? %>
          <div class="d-flex align-items-center">
            <span class="me-2">フィルター:</span>
            <span class="badge bg-dark me-2"><%= params[:tag] %></span>
            <%= link_to prompts_path(sort: params[:sort]), class: "btn btn-sm btn-outline-secondary" do %>
              <i class="bi bi-x"></i> クリア
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    
    <%= turbo_frame_tag "search-results" do %>
      <% if @prompts.any? %>
        <div class="row">
          <% @prompts.each do |prompt| %>
            <div class="col-md-6 mb-4">
              <div class="card h-100">
                <div class="card-body">
                  <h5 class="card-title"><%= prompt.title %></h5>
                  <% if prompt.url.present? %>
                    <p class="card-text small text-truncate">
                      <i class="bi bi-link-45deg"></i>
                      <%= link_to prompt.url, prompt.url, target: "_blank", class: "text-muted text-decoration-none text-break" %>
                    </p>
                  <% end %>
                  <p class="card-text text-truncate"><%= prompt.description %></p>
                  <div class="mb-2">
                    <% prompt.tags.each do |tag| %>
                      <%= link_to prompts_path(tag: tag.name), class: "badge bg-light text-dark text-decoration-none me-1" do %>
                        <%= tag.name %>
                      <% end %>
                    <% end %>
                  </div>
                  <%= link_to "詳細", prompt_path(prompt), class: "btn btn-dark btn-sm" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="alert alert-light">
          <% if params[:search].present? %>
            <p class="mb-0 d-flex align-items-center gap-2">
              <i class="bi bi-info-circle"></i>
              <span>「<%= params[:search] %>」に一致するプロンプトが見つかりませんでした。</span>
            </p>
          <% else %>
            <p class="mb-0">プロンプトがまだありません。新しいプロンプトを追加してください。</p>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
  
  <div class="col-md-4">
    <div class="card mb-4">
      <div class="card-header">
        新しいプロンプト
      </div>
      <div class="card-body">
        <%= form_with(model: @prompt, local: true) do |f| %>
          <% if @prompt.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% @prompt.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <div class="mb-3">
            <%= f.label :title, "タイトル", class: "form-label" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          
          <div class="mb-3">
            <%= f.label :url, "URL", class: "form-label" %>
            <%= f.url_field :url, class: "form-control" %>
          </div>
          
          <div class="mb-3">
            <%= f.label :description, "説明", class: "form-label" %>
            <%= f.text_area :description, rows: 5, class: "form-control" %>
          </div>
          
          <%= f.submit "追加する", class: "btn btn-dark w-100" %>
        <% end %>
      </div>
    </div>
    
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <span>既存タグ一覧</span>
        <span class="badge text-dark"><%= @total_tag_count %>タグ</span>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <input type="text" id="tagSearch" class="form-control form-control-sm" placeholder="タグを検索...">
        </div>
        <div class="tag-cloud" style="max-height: 300px; overflow-y: auto;">
          <% @all_tags_for_display.each do |tag_name| %>
            <%= link_to prompts_path(tag: tag_name), class: "badge bg-light text-dark text-decoration-none me-1 mb-1 tag-item" do %>
              <%= tag_name %>
              <span class="ms-1 text-secondary">(<%= @user_tags[tag_name] %>)</span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('tagSearch');
    const tagItems = document.querySelectorAll('.tag-item');
    
    searchInput.addEventListener('input', function() {
      const searchValue = this.value.toLowerCase();
      
      tagItems.forEach(function(item) {
        const tagName = item.textContent.toLowerCase();
        if (tagName.includes(searchValue)) {
          item.style.display = 'inline-block';
        } else {
          item.style.display = 'none';
        }
      });
    });
  });
</script>
