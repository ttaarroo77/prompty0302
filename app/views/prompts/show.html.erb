<div class="row">
  <div class="col-md-8">
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">プロンプト詳細</h5>
        <div>
          <%= link_to "編集", edit_prompt_path(@prompt), class: "btn btn-sm btn-outline-primary me-2" %>
          <%= button_to "削除", prompt_path(@prompt), method: :delete, class: "btn btn-sm btn-outline-danger", form: { data: { turbo_confirm: "本当に削除しますか？" } }, style: "display: inline-block;" %>
        </div>
      </div>
      <div class="card-body">
        <h2><%= @prompt.title %></h2>
        
        <% if @prompt.url.present? %>
          <div class="mb-3">
            <strong>URL:</strong>
            <%= link_to @prompt.url, @prompt.url, target: "_blank" %>
          </div>
        <% end %>
        
        <div class="mb-3">
          <strong>説明:</strong>
          <div class="mt-2"><%= simple_format(@prompt.description) %></div>
        </div>
        
        <div>
          <strong>タグ:</strong>
          <div class="mt-2">
            <% if @prompt.tags.any? %>
              <% @prompt.tags.each do |tag| %>
                <div class="badge bg-secondary p-2 me-2 mb-2 d-inline-flex align-items-center">
                  <%= tag.name %>
                  <%= button_to prompt_tag_path(@prompt, tag), method: :delete, class: "ms-2 btn-close btn-close-white", style: "font-size: 0.5rem; background-size: 0.5rem;", form: { style: "display: inline;" } do %>
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <p>タグがありません</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <%= link_to "← 一覧に戻る", prompts_path, class: "btn btn-outline-secondary" %>
  </div>
  
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">タグを追加</div>
      <div class="card-body">
        <%= form_with(model: [@prompt, @tag], local: true) do |f| %>
          <div class="mb-3">
            <%= f.label :name, "タグ名", class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          
          <%= f.submit "追加", class: "btn btn-primary w-100" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
